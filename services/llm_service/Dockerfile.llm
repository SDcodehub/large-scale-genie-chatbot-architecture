FROM python:3.10-slim

WORKDIR /app

COPY requirements-common.txt .
COPY services/[service_name]/requirements.txt .
RUN pip install --no-cache-dir -r requirements-common.txt -r requirements.txt

COPY services/llm_service ./services/llm_service

EXPOSE 8002

CMD ["uvicorn", "services.llm_service.app:app", "--host", "0.0.0.0", "--port", "8002"]
